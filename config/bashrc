# If not running interactively, don't do anything
[[ $- != *i* ]] && return

alias ls='ls --color=auto'
PS1='[\u@\h \W]\$ '

# enable vi style editing in bash
set -o vi

export EDITOR=nvim
export PASSWORD_STORE_DIR=~/docs/pass

# run 'startx' command
if [[ -z $DISPLAY ]] && [[ $(tty) = /dev/tty1 ]]; then
	exec startx;
fi
